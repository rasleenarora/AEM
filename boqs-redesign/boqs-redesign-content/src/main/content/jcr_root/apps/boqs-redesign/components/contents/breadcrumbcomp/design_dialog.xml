<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Breadcrumb Component Configuration"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <general
                jcr:primaryType="cq:Panel"
                title="General">
                <items jcr:primaryType="cq:WidgetCollection">
                    <parentlevel
                        jcr:primaryType="cq:Widget"
                        defaultValue="2"
                        fieldDescription="Determines from what level the children get listed in the trail."
                        fieldLabel="Parent Level(absolute)"
                        name="./parentlevel"
                        regex="/\\d+$/"
                        xtype="textfield"/>
                </items>
            </general>
        </items>
    </items>
</jcr:root>
