  .inner
    h3.title Select start date:
    a.close.hidden-xs(href='#', title='Close')
      span.wi-icon-blue.icon-close-popover
    .calendar(data-init-calendar='')
    .group-btn
      a.btn.btn-primary.btn-ok(href='#', title='Today', data-today='data-today') Today
      a.btn-cancel.title.visible-xs(href='#', title='Cancel') Cancel

